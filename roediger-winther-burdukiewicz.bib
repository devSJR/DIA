@Article{willitzki_new_2012,
  Title                    = {{New platform technology for comprehensive serological diagnostics of autoimmune diseases}},
  Author                   = {Willitzki, Annika and Hiemann, Rico and Peters, Vanessa and Sack, Ulrich and Schierack, Peter and R{\"o}diger, Stefan and Anderer, Ursula and Conrad, Karsten and Bogdanos, Dimitrios P and Reinhold, Dirk and Roggenbuck, Dirk},
